@{
    Layout = "_Layout";
}

<!-- FULL PAGE WRAPPER -->
<div style="width:100%; padding:0; margin:0; background:#ffffff;">

    <!-- ⭐ TOP WHITE SECTION -->
    <section style="padding:60px 0; background:#ffffff; text-align:center;">

        <!-- Yellow Heading -->
        <h1 style="font-size:40px; font-weight:800; color:#ffcc00; margin-bottom:10px;">
            Your career partner!
        </h1>

        <!-- Blue Subheading -->
        <h3 style="font-size:24px; font-weight:700; color:#0b0b3d; margin-bottom:10px;">
            Center for Software, Networking & Cloud Education
        </h3>

        <p style="width:65%; margin:20px auto; font-size:17px; line-height:1.6; color:#333;">
            One of India’s best training destinations for Software, Networking & Cloud education 
            with 18+ years of industrial experience. Over 175,000 students trained so far.
        </p>

        <!-- ⭐ FULL-WIDTH LOGO STRIP -->
        <div style="
            display:flex;
            justify-content:space-between;
            align-items:center;
            flex-wrap:nowrap;
            width:100;
            margin:40px auto 0 auto;
        ">
            <img src="~/images/microsoft.png" style="width:8%;">
            <img src="~/images/ibm.png" style="width:8%;">
            <img src="~/images/google.png" style="width:8%;">
            <img src="~/images/amazon.png" style="width:8%;">
            <img src="~/images/redhat.png" style="width:8%;">
            <img src="~/images/github.png" style="width:8%;">
        </div>

    </section>



    <!-- ⭐ BLUE MAIN SECTION -->
    <section style="padding:70px 0; background:#0b0b3d;">

        <div style="width:85%; margin:auto; display:flex; gap:40px;">

            <!-- LEFT CONTENT -->
            <div style="width:50%; color:white;">

                <h2 style="font-size:34px; font-weight:800; color:#ffcc00;">
                    Dreaming about a career in IT
                </h2>

                <p style="font-size:17px; line-height:1.7; margin-top:15px;">
                    Spearheaded by the working professionals of Suffix E Solutions,
                    we provide industry-level training with real-time projects.
                </p>

                <p style="font-size:17px; line-height:1.7; margin-top:15px;">
                    We provide comprehensive courses in:
                    <br>✔ Software Programming
                    <br>✔ Data Science & AI
                    <br>✔ Data Analytics
                    <br>✔ Cloud Computing
                    <br>✔ Mobile App Development
                    <br>✔ Networking
                    <br>✔ Server Administration
                    <br>✔ DevOps
                    <br>✔ Software Testing
                    <br>✔ Cyber Security
                    <br>✔ Digital Marketing
                </p>

            </div>

