@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width:350px; margin:50px auto; background:white; padding:25px;
            border-radius:10px; box-shadow:0 4px 10px rgba(0,0,0,0.1);">
    <h3 style="text-align:center; color:#003366; margin-bottom:20px;">Reset Password</h3>

    <!-- SUCCESS MESSAGE -->
    @if (TempData["Success"] != null)
    {
        <script>
            alert("@TempData["Success"]");
        </script>
    }

    <form asp-action="ResetPassword" method="post" id="resetForm">
        <input type="hidden" name="Email" value="@ViewBag.Email" />

        <!-- New Password -->
        <label>New Password</label>
        <div class="input-group mb-3">
            <input type="password" id="newPass" name="NewPassword" class="form-control" required />
            <span class="input-group-text" onclick="toggle('newPass', this)" style="cursor:pointer;">
                👁
            </span>
        </div>

        <!-- Confirm Password -->
        <label>Confirm Password</label>
        <div class="input-group mb-3">
            <input type="password" id="confirmPass" name="ConfirmPassword" class="form-control" required />
            <span class="input-group-text" onclick="toggle('confirmPass', this)" style="cursor:pointer;">
                👁
            </span>
        </div>

        <button type="submit"
                class="btn btn-primary w-100"
                style="background-color:#003366 !important; border-color:#003366 !important;">
            Update Password
        </button>



    </form>
</div>

<script>
    // Show / Hide password function
    function toggle(id, icon) {
        const field = document.getElementById(id);
        if (field.type === "password") {
            field.type = "text";
            icon.innerHTML = "🙈";
        } else {
            field.type = "password";
            icon.innerHTML = "👁";
        }
    }
</script>